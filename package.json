{
  "name": "sparq2",
  "private": true,
  "packageManager": "pnpm@9.15.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:api": "pnpm --filter @sparq2/api dev",
    "dev:web": "pnpm --filter @sparq2/web dev",
    "dev:mobile": "pnpm --filter @sparq2/mobile start",
    "dev": "concurrently \"pnpm dev:api\" \"pnpm dev:web\""
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
